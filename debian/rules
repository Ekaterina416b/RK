#!/usr/bin/make -f

%:
	dh $@ --with=cmake

override_dh_auto_configure:
	mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Release -DINSTALL_GTEST=OFF ..

override_dh_auto_build:
	cd build && cmake --build .

override_dh_auto_install:
	cd build && DESTDIR=$(CURDIR)/debian/factorypattern cmake --install . --prefix /usr
